---
interface Props {
  title?: string;
}

import '@/styles/globals.css';
import Menu from '@/layouts/components/Menu.astro';
import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
const fullTitle = title ? title + ' - MIeL UI' : 'MIeL UI';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/prism-one-light.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
  </head>
  <body class="bg-background text-foreground">
    <header
      class="fixed z-20 h-16 w-full border-b border-secondary bg-background/70 backdrop-blur-sm"
    >
      hola
    </header>
    <nav
      class="fixed inset-0 left-0 z-10 mt-16 hidden w-[20rem] overflow-y-auto border-r border-secondary p-8 lg:block"
    >
      <Menu />
    </nav>
    <main class="container pb-8 pt-24 lg:pl-[22rem]">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    @apply text-sm;
  }
</style>
