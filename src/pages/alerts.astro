---
import Layout from '@/layouts/Layout.astro';
import Article from '@/layouts/components/Article.astro';
import Section from '@/layouts/components/Section.astro';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
---

<Layout title="Alerts">
  <Article title="Alerts">
    <Fragment slot="description">Descripci√≥n general del componente</Fragment>
    <Section title="Variants">
      <Fragment slot="description">Variantes del alert</Fragment>
      <div class="flex flex-col gap-4">
        <Alert closable client:load>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
        <Alert variant="success" closable client:load>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
        <Alert variant="info" closable client:load>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
        <Alert variant="warning" closable client:load>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
        <Alert variant="error" closable client:load>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
        <Alert variant="error" client:load withIcon={false}>
          <AlertTitle>Mensaje enviado</AlertTitle>
          <AlertDescription>Nos contactaremos con usted a la brevedad.</AlertDescription>
        </Alert>
      </div>
    </Section>
  </Article>
</Layout>
